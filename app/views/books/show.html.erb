<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
      <div class="col-md-3" style="background-color: white;">
  <%= render 'users/leftunder', user: @book.user %>
  <%= render 'books/leftside', books: @book %>
      </div>
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %>
        <br><%= link_to @book.user.name, user_path(@user.id) %></br>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    <% end %>
  </tr>
</table>
</div>
</div>
</div>
