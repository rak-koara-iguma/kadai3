<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container mt-5">
  <div class="row">
  <div class="mx-auto">
<h2>User info</h2>
<%= form_with model: @user,url: user_path(@user.id), method: :patch do |f| %>
    <div class="form-group">
    <h6><label for="inputName">Name</label></h6>
    <%= f.text_field :name, autofocus: true, id:"inputName" %>
    </div>
    <div class="form-group">
    <h6><label for="inputImage">Image</label></h6>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
    </div>
    <div class="form-group">
    <h6><label for="inputIntroduction">Introduction</label></h6>
    <%= f.text_field :introduction %>
    <h1></h1>
    <%= f.submit "Update User" %>
    </div>
<% end %>
  </div>
  </div>
</div>